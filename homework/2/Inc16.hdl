/**
 * 16-bit incrementer:
 * out = in + 1
 */
CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
    Add16(a=in, b[0]=1, b[1]=0, b[2]=0, b[3]=0, b[4]=0, b[5]=0, b[6]=0, b[7]=0,
                     b[8]=0, b[9]=0, b[10]=0, b[11]=0, b[12]=0, b[13]=0, b[14]=0, b[15]=0, 
          out=out);
}